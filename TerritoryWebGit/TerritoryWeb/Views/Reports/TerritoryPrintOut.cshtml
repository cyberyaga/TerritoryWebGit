@model IEnumerable<TerritoryWeb.Models.Reports.TerritoryPrintOutModel>
@{
    Layout = null;
    string St = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TerritoryPrintOut</title>
    <style>
        table {
            border-collapse: collapse;
            width:100%;
        }
        td{
            font-size: x-small;
        }

        table, th, td {
            border: 1px solid lightgrey;
            padding: 2px;
            text-align:left;
        }
    </style>
</head>
<body onload="window.print()">
    <div style="width:336px;height:532px; font-family:Arial; font-size:small;">
        <p style="text-align:center">REGISTRO DE CASA EN CASA</p>
        Territory: @Html.DisplayFor(m => Model.FirstOrDefault().TerritoryName)
        <br /><br />
        <table>
            <tr>
                <th>Numero</th>
                <th>Apt.</th>
                <th>Fecha</th>
                <th>Simbolo</th>
                <th width="100%">Nota</th>
            </tr>
            @foreach (var item in Model)
            {
                if (item.DoorStreet != St)
                {
                    <tr>
                        <td colspan="5"><b>@item.DoorStreet</b></td>
                    </tr>

                    St = item.DoorStreet;
                }


                <tr>
                    <td>@item.DoorAddress</td>
                    <td>@item.DoorApartment</td>
                    <td></td>
                    <td></td>
                    <td>@item.DoorComments</td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
